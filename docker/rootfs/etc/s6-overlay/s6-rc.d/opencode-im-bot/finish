#!/bin/bash
# Finish script for opencode-im-bot service

EXIT_CODE=$1
echo "[opencode-im-bot] Service stopped with exit code ${EXIT_CODE}"

# Exit codes:
# 0   = Normal exit
# 143 = SIGTERM (graceful shutdown)
# 130 = SIGINT (Ctrl+C)

if [ "${EXIT_CODE}" -eq 0 ] || [ "${EXIT_CODE}" -eq 143 ] || [ "${EXIT_CODE}" -eq 130 ]; then
    exit 0
fi

# Abnormal exit - wait before s6 restarts
echo "[opencode-im-bot] Abnormal exit, restarting in 5 seconds..."
sleep 5
